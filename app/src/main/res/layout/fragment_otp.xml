<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".otpFragment"
    android:background="#B58EFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="25dp">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circular_bg"
            android:elevation="5dp"
            android:src="@drawable/verify" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter otp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/corner"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="1234"
            android:inputType="phone"
            android:layout_margin="10dp"
            android:background="@drawable/corner"
            android:elevation="10dp"/>

        <Button
            android:id="@+id/verify"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:text="Verify Otp and Login"/>

        </LinearLayout>
            <ProgressBar
                android:id="@+id/progress1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:indeterminateTint="#743DD6"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/resendOtp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:elevation="5dp"
                android:text="Resend otp in 30sec"
                android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:background="@drawable/circular_bg"
                android:backgroundTint="#A99DBD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:background="@drawable/circular_bg"
                android:backgroundTint="#743DD6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:background="@drawable/circular_bg"
                android:backgroundTint="#A99DBD">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>

</FrameLayout>